{
  "appId": "com.teos.bankchain",
  "appName": "TEOS Bankchain",
  "webDir": "../../frontend/web/.next",
  "bundledWebRuntime": false,
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#003366",
      "showSpinner": false
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    },
    "BiometricAuth": {
      "allowDeviceCredential": true,
      "iosBiometryLockedOutMessage": "Biometric authentication is locked. Please try again later.",
      "iOSBiometryAuthenticationReason": "Authenticate to access your account"
    }
  },
  "server": {
    "iosScheme": "https"
  }
}
