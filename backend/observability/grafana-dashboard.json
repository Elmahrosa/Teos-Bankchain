{
  "dashboard": {
    "title": "TEOS Bankchain - Monitoring Dashboard",
    "panels": [
      {
        "title": "HTTP Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "HTTP Request Duration (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Transaction Volume",
        "targets": [
          {
            "expr": "sum(rate(transactions_total[5m])) by (type, status)"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Active Users",
        "targets": [
          {
            "expr": "active_users"
          }
        ],
        "type": "stat"
      },
      {
        "title": "API Error Rate",
        "targets": [
          {
            "expr": "rate(api_errors_total[5m])"
          }
        ],
        "type": "graph",
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              }
            }
          ]
        }
      },
      {
        "title": "Compliance Alerts",
        "targets": [
          {
            "expr": "sum(rate(compliance_alerts_total[1h])) by (alert_type, severity)"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Sanctions Screening",
        "targets": [
          {
            "expr": "sum(rate(sanctions_checks_total[1h])) by (risk_level)"
          }
        ],
        "type": "pie"
      },
      {
        "title": "Database Query Performance",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Wallet Balances by Currency",
        "targets": [
          {
            "expr": "sum(wallet_balance_total) by (currency)"
          }
        ],
        "type": "bar"
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
